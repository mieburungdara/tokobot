<?xml version="1.0"?>
<ruleset name="TokoBot">
    <description>TokoBot coding standard</description>

    <!-- Check files in the app directory -->
    <file>app</file>
    <file>public/index.php</file>
    <file>routes.php</file>

    <!-- Use the PSR-12 standard -->
    <rule ref="PSR12"/>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Show sniff codes -->
    <arg value="s"/>
</ruleset>
